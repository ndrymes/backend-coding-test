{
  "name": "backend-coding-test",
  "version": "1.0.0",
  "description": "A coding assessment for Xendit backend interviews",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "export NODE_ENV=test && mocha src/tests  --timeout 30000  --exit || true",
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "coverage": "nyc --reporter=text npm run test",
    "prepare": "husky install",
    "prettify": "npx prettier --write src",
    "lint": "npx eslint *.js"
  },
  "lint-staged": {
    "**/*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.js": "eslint --cache --fix"
  },
  "keywords": [
    "Xendit"
  ],
  "author": "Bo",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "dotenv": "^10.0.0",
    "express": "^4.16.4",
    "joi": "^17.4.2",
    "sqlite": "^4.0.23",
    "sqlite3": "^4.2.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "artillery": "^1.7.8",
    "chai": "^4.3.4",
    "eslint": "^7.32.0",
    "husky": "^7.0.0",
    "lint-staged": "^11.1.2",
    "mocha": "^6.1.4",
    "nodemon": "^2.0.12",
    "nyc": "^15.1.0",
    "prettier": "^2.4.0",
    "supertest": "^4.0.2",
    "typescript": "^4.4.3"
  }
}
